%header.header
  .headerInner
    .headerMain
      .headerMain__icon
        =link_to root_path do
          =image_tag "logo.png",alt:"アイコン"
      .searchBox
        = form_with(url: search_items_path, local: true, method: :get, class: "searchBox__form") do |f|
          = f.text_field :keyword, placeholder: "キーワードから探す", class: "searchBox__input"
          = button_tag type: 'submit' do
            = image_tag 'icon/icon-search 1.png', alt: '検索アイコン'
    .nav
      .navLeft
        .navLeft__item#category_tree
          = link_to "カテゴリー", "#"
          / カテゴリー覧html
          .tree.displayNone
            %ul.categoryTree
              = link_to "#", class: "categoryTree__item" do
                %li
                  アイテム1
              = link_to "#", class: "categoryTree__item" do
                %li
                  アイテム2
              = link_to "#", class: "categoryTree__item" do
                %li
                  アイテム3
              = link_to "#", class: "categoryTree__item" do
                %li
                  アイテム4
              = link_to "#", class: "categoryTree__item" do
                %li
                  アイテム5
              = link_to "#", class: "categoryTree__item" do
                %li
                  アイテム6
        .navLeft__item#brand
          = link_to "ブランド", "#"
          .tree.displayNone
            %ul.categoryTree
              %li.categoryTree__item
                = link_to "アイテム1", "#"
              %li.categoryTree__item
                = link_to "アイテム2", "#"
              %li.categoryTree__item
                = link_to "アイテム3", "#"
              %li.categoryTree__item
                = link_to "アイテム4", "#"
              %li.categoryTree__item
                = link_to "アイテム5", "#"
              %li.categoryTree__item
                = link_to "アイテム6", "#"
      .navRight
        -if user_signed_in?
          .navRight__item
            = link_to "ログアウト", destroy_user_session_path, method: :DELETE
          .navRight__item
            = link_to "マイページ", user_path(current_user.id)
        -else
          .navRight__item
            = link_to "ログイン", new_user_session_path
          .navRight__item
            = link_to "新規会員登録", new_user_path
