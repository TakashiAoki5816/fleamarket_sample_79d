        -#       =i.file_field :image, class: "form-field"
        -#       %input{type: "file"}
        -#       %input{type: "file"}
        -#       %input{type: "file"}
        -# -# = f.fields_for :images do |i|
        -# -#         .input-area
        -# -#           = i.file_field :image, type: 'file', name: "item[images_attributes][][image_url]", value:"", style: "display:none", id:"img-file"
        -# -#           %label{for: "img-file"}
        -# -#             %i.fas.fa-camera

        
      %li
        = f.label :name, "商品名"
        %span 必須
      %li
        = f.text_field :name, placeholder: "40文字まで"
      %li
        = f.label :explanation, "商品説明"
        %span 必須
      %li
        = f.text_area :explanation, class: "form-field", placeholder: "例）2019年ごろに1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
      %li
        = f.label :category, "カテゴリー"

        %span 必須
      %li
        = f.label :quality, "商品の状態"
        %span 必須
      %li
        = f.select :quality,[['新品、未使用', 1], ['未使用に近い', 2], ['目立った傷や汚れなし', 3], ['やや傷や汚れあり', 4], ['傷や汚れあり', 5], ['全体的に状態が悪い', 6]], { include_blank: '選択してください' }, { id: "quality_id" }
      %li
        = f.label :delivery_cost, "配送料の負担"
        %span 必須
      %li
        = f.select :delivery_cost, [['送料込み（出品者負担）', 1], ['着払い（購入者負担）', 2]], { include_blank: '選択してください' }, { id: "delivery_cost_id" }
      %li
        = f.label :region, "発送元の地域"
        %span 必須
      %li
        = f.select :region, [['北海道', 1], ['青森県', 2], ['岩手県', 3], ['宮城県', 4], ['秋田県', 5], ['山形県', 6], ['福島県', 7], ['茨城県', 8], ['栃木県', 9], ['群馬県', 10], ['埼玉県', 11], ['千葉県', 12], ['東京都', 13], ['神奈川県', 14], ['新潟県', 15], ['富山県', 16], ['石川県', 17], ['福井県', 18], ['山梨県', 19], ['長野県', 20], ['岐阜県', 21], ['静岡県', 22], ['愛知県', 23], ['三重県', 24], ['滋賀県', 25], ['京都府', 26], ['大阪府', 27], ['兵庫県', 28], ['奈良県', 29], ['和歌山県', 30], ['鳥取県', 31],['島根県', 32], ['岡山県', 33], ['広島県', 34], ['山口県', 35], ['徳島県', 36], ['香川県', 37], ['愛媛県', 38], ['高知県', 39], ['福岡県', 40], ['佐賀県', 41], ['長崎県', 42], ['熊本県', 43], ['大分県', 44], ['宮崎県', 45], ['鹿児島県', 46], ['沖縄県', 47]], { include_blank: '選択してください' }
      %li
        = f.label :period, "発送までの日数"
        %span 必須
      %li
        = f.select :period, [['1〜2日で発送', 1], ['2〜3日で発送', 2], ['4〜7日で発送', 3]], { include_blank: '選択してください' }, { id: "period_id" }
      %li
        = f.label :price, "販売価格"
        %span 必須
      %li
        = f.number_field :price, class: "form-field", placeholder:"例)￥1500"
          
      %li
        = f.submit "出品する", class:"formbtn"
