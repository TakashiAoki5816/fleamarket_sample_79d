.NewMain
  .Form
    =form_with model: @item, class:"formcontents", local: true do |f|
      .Form__group
        .Form__label
          = f.label :image, "出品画像"
          %span 必須
        .Form__field
          %p.img__upload__comment 最大10枚までアップロードできます
          %p ドラッグアンドドロップ<br>またはクリックしてファイルをアップロード
          .imageContainer

          = f.fields_for :images, @image do |image|
            = image.file_field :image, id: "sell-img" , name: "item[images_attributes][0][image]"
            = image.file_field :image, id: "sell-img" , name: "item[images_attributes][1][image]"
      .Form__group
        .Form__label
          = f.label :name, "商品名"
          %span 必須
        .Form__field
          = f.text_field :name, placeholder: "全角20文字まで", class: "Form__input", maxlength: "40"
      .Form__group
        .Form__label
          = f.label :explanation, "商品説明"
          %span 必須
        .Form__field
          = f.text_area :explanation, class: "Form__input", placeholder: "例）2019年ごろに1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
      .Form__group
        .Form__label
          = f.label :category, "カテゴリー"
          %span.listing-default--require 必須
          = f.select :category, @category_parent_array, {}, {id: 'parent_category'}

      %li
        = f.label :quality, "商品の状態"
        %span 必須
      %li
        = f.select :quality,[['新品、未使用', 1], ['未使用に近い', 2], ['目立った傷や汚れなし', 3], ['やや傷や汚れあり', 4], ['傷や汚れあり', 5], ['全体的に状態が悪い', 6]], { include_blank: '選択してください' }, { id: "quality_id" }
      %li
        = f.label :delivery_cost,
         "配送料の負担"
        %span 必須
      %li
        = f.select :delivery_cost, [['送料込み（出品者負担）', 1], ['着払い（購入者負担）', 2]], { include_blank: '選択してください' }, { id: "delivery_cost_id" }
      %li
        = f.label "発送元の地域"
        %span 必須
      %li
        = f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {include_blank: '選択してください' })
      %li
        = f.label :period, "発送までの日数"
        %span 必須
      %li
        = f.select :period, [['1〜2日で発送', 1], ['2〜3日で発送', 2], ['4〜7日で発送', 3]], { include_blank: '選択してください' }, { id: "period_id" }
      %li
        = f.label :price, "販売価格"
        %span 必須
      %li
        = f.number_field :price, class: "form-field", placeholder:"例)￥1500"
      %li
        = f.submit "出品する", class:"formbtn"

