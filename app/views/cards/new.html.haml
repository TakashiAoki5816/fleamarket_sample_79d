.creditcard
  %h2.title クレジットカード登録
  = form_with url: cards_path, method: :post, html: { name: "inputForm" }, class: "cardform" do |f|
    = f.label :カード番号, class: 'label'
    %span.necessary 必須
    %br/
    = f.text_field :card_number, type: 'text', class: 'input-number', placeholder: '半角数字のみ', maxlength: "16", id: "card_number"
    %br/
    = f.label :有効期限, class: 'label'
    %span.necessary 必須
    %br/
    .expire
      .expiretime
        = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-expire'
        %span.expire-month 月
        %br
      .expiretime
        = f.select :exp_year, [["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-expire'
        %span.expire-year 年
    = f.label :セキュリティコード, class: 'label'
    %span.necessary 必須
    %br/
    = f.text_field :cvc, type: 'text', class: 'input-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4", id: "cvc"
    %br/
    #card_token
    = f.submit '追加する', class: 'creditcardbtn', id: 'token_submit'
